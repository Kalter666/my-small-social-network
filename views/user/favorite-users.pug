include ../basic/head
    title= user.username + ' | social network'
body
    include ../basic/navbar
    div.jumbotron
        div.container
            div.row
                //
                    Start menu
                div.col-xs-2.left
                    include ../basic/main-menu
                //
                    end menu
                //
                    Start favorites
                div.row
                    div.col-xs-9.text-center
                        if you
                            h1.h1 My favorite users:
                        else
                            h1.h1= user.username + '\'s favorite users'
                        if friends
                            ul.list-group.text-center
                            each friend in friends
                                li.list-group-item
                                    a.btn.btn-default(href="/profile/" + friend.username style="width: 100%")= friend.username
